*
  margin 0
  padding 0
  box-sizing border-box
  line-height 1
  font-family 'Manrope', sans-serif
  color #000
  &:before
    box-sizing border-box
h1, h2, h3, h4, h5, h6
  margin 0
ul
  list-style none
a
  text-decoration none
img
  display block

.wrapper
  min-height 100vh
  overflow hidden
  background-color #E7B943
  +mq(0, 767px)
    display flex
    flex-direction column
    justify-content space-between
.container
  max-width 956px
  margin 0 auto
  padding 0 15px
.logo
  display flex
  align-items center
  +el(text)
    display flex
    flex-direction column
    align-items flex-start
    font-weight 600
    font-size 14px
    line-height 1.16
    letter-spacing -0.02em
    color #000
    padding-left 16px
    a
      font-weight inherit
      font-size inherit
      line-height inherit
      letter-spacing inherit
      color inherit
      text-decoration underline
.header
  position relative
  z-index 1
  +el(inner)
    padding-top 38px
  +mq(0, 767px)
    display none
.main
  +mq(0, 767px)
    padding-top 39px
  +el(img-holder)
    position relative
    display flex
    justify-content center
    margin-top -21px
  +el(text)
    position absolute
    font-weight 800
    text-transform uppercase
    white-space nowrap
    color #fff
    background-color #000
    letter-spacing 0.44em
    transform rotate(-15deg)
    @media only screen and (min-width: 1560px)
      top 110px
      left calc(50% - 505px)
      font-size 40px
      line-height 70px
      padding 0 65px 0 25px
    +mq(1366px, 1560px)
      font-size 30px
      line-height 58px
      top 78px
      left calc(50% - 382px)
      padding 0 56px 0 15px
    +mq(921px, 1365px)
      font-size 25px
      line-height 45px
      top 61px
      left calc(50% - 369px)
      padding 0 45px 0 15px
    +mq(768px, 920px)
      font-size 21px
      line-height 32px
      top 57px
      left calc(50% - 313px)
      padding 0 37px 0 15px
    +mq(0, 767px)
      font-size 14px
      line-height 30px
      padding-left 13px
      top 10px
      left calc(50% - 147px)
      padding 0 45px 0 15px
  +el(img)
    +mq(1366px, 1560px)
      max-width 1520px
    +mq(921px, 1365px)
      max-width 1000px
    +mq(768px, 920px)
      max-width 825px
    +mq(0, 767px)
      display none
  +el(img-mob)
    display none
    +mq(0, 767px)
      display block
.form
  +el(holder)
    position relative
    margin-top -155px
    +mq(1366px, 1560px)
      margin-top -100px
    +mq(768px, 1365px)
      margin-top 0
    +mq(0, 767px)
      margin-top 20px
  +el(inner)
    
    max-width 660px
    margin-left auto
  +el(btn)
    position absolute
    top 50%
    transform translateY(-50%)
    right 0
    background-color transparent
    border-radius 50%
    border 0
    outline none
    cursor pointer
  +el(label)
    display inline-block
    font-weight 700
    font-size 24px
    letter-spacing -0.02em
    color #000
    padding-left 36px
    margin-bottom 13px
    +mq(0, 767px)
      font-size 16px
.input
  width 100%
  height 77px
  line-height 77px
  background #D9D9D9
  border-radius 38px
  font-size 18px
  letter-spacing -0.02em
  color #636363
  border 0
  outline none
  padding 0 100px 0 36px
  +el(holder)
    position relative
.footer
  +el(inner)
    display none
    padding 25px 0
    +mq(0, 767px)
      display flex
      justify-content center
      align-items center